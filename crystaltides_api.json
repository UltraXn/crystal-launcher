{
	"info": {
		"_postman_id": "crystaltides-api",
		"name": "CrystalTides API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Admin Panel",
			"item": [
				{
					"name": "Logs (Web)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/logs?page=1&limit=50&source=web",
							"host": ["{{baseUrl}}"],
							"path": ["api", "logs"],
							"query": [
								{ "key": "page", "value": "1" },
								{ "key": "limit", "value": "50" },
								{ "key": "source", "value": "web" }
							]
						}
					}
				},
				{
					"name": "Logs (Game/RCON)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/logs/commands?page=1&limit=50",
							"host": ["{{baseUrl}}"],
							"path": ["api", "logs", "commands"],
							"query": [
								{ "key": "page", "value": "1" },
								{ "key": "limit", "value": "50" }
							]
						}
					}
				},
				{
					"name": "Get All Polls (History)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/polls?page=1&limit=10",
							"host": ["{{baseUrl}}"],
							"path": ["api", "polls"],
							"query": [
