								{ "key": "limit", "value": "10" }
							]
						}
					}
				},
				{
					"name": "Create Poll",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"New Poll\",\n    \"options\": [\"Option A\", \"Option B\"],\n    \"duration_hours\": 24\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/polls",
							"host": ["{{baseUrl}}"],
							"path": ["api", "polls"]
						}
					}
				},
				{
					"name": "Get Donations",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/donations?page=1&limit=50",
