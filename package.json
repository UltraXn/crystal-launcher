{
    "name": "crystaltides-app",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "client",
        "server",
        "packages/*"
    ],
    "scripts": {
        "start": "concurrently \"npm run server\" \"npm run client\"",
        "client": "npm run dev -w client",
        "server": "npm run dev -w server",
        "install:all": "npm install"
    },
    "devDependencies": {
        "concurrently": "^8.0.0"
    }
}