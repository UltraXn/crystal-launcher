    "typescript": "5.8.3",
    "@storybook/addon-docs": "^9.1.4"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "skinview3d": "^3.3.0"
